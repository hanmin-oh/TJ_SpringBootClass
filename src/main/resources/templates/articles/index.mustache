{{>./layouts/header}}

<table class="table">
   <thead>
      <tr>
         <th scope="row">ID</th>
         <th scope="row">Title</td>
         <th scope="row">Content</td>
      </tr>
   </thead>
   <tbody>
      <!-- 
         Model 인터페이스 객체에 저장돼서 넘어오는 데이터가 List 형식의 묶음 데이터일 경우 자동으로
         사용 범위 시작부터 끝까지 반복 처리를 한다.
      -->
      {{#articleList}} 
      <tr>
         <td>{{id}}</td>
         <td>
            <a href="/articles/{{id}}">{{title}}</a>
         </td>
         <td>{{content}}</td>
      </tr>
      {{/articleList}} 
      {{^articleList}} <!-- ^는 Model 인터페이스 객체로 넘어온 데이터가 없으면 -->
      <tr>
         <td colspan="3">저장된 데이터가 없습니다.</td>
      </tr>
      {{/articleList}} 
   </tbody>
</table>

<!-- 새글쓰기 링크 추가 -->
<a href="/articles/new" class="btn btn-primary">글쓰기</a>


{{>./layouts/footer}}
   